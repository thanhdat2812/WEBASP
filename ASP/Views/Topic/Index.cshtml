@model IEnumerable<ASP.Models.Topic>
@{ ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml"; }

<h2>Index</h2>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-striped" id="table1">

          <tr>
            <th>
                @Html.DisplayNameFor(model => model.Topicid)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Topicname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
</tr>

    <tbody>
        @foreach (var item in Model)
        {
<tr>
    <th>
        @Html.DisplayFor(modelItem => item.Topicid)
    </th>
    <td>
        @Html.DisplayFor(modelItem => item.Topicname)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Description)
    </td>
    <td>

        @Html.ActionLink("Edit", "Edit", new { id = item.Topicid })|
        @Html.ActionLink("Delete", "Delete", new { id = item.Topicid }, new { onclick = "return confirm('Are you sure you wish to delete this cat?');" })

    </td>
</tr>}
    </tbody>
    </table>
